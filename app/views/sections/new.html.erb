
<%= form_for :section , url: sections_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </p>

   <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>